<p>
  <strong>Cathegory:</strong>
  <%= @cathegory.cat %>
</p>
 <p>
  <strong>Description:</strong>
  <%= @cathegory.description %>
</p>

<h2>Rośliny</h2>
<% @cathegory.plants.each do |plant| %>
  <p>
    <strong>Roślina:</strong>
    <%= plant.name %>
   
  </p>
   
<% end %>


 <h2>Nowa roślina</h2>
<%= form_for([@cathegory, @cathegory.plants.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :family %><br>
    <%= f.text_area :family %>
  </p>
   <p>
    <%= f.label :condition %><br>
    <%= f.text_area :condition %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Back', cathegories_path %>
